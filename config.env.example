# MQTT Broker Configuration - EMQX Cloud Example
MQTT_BROKER=your-emqx-broker.emqxsl.com
MQTT_PORT=8883
MQTT_USERNAME=your_username
MQTT_PASSWORD=your_password

# TLS/SSL Configuration
CA_CERT_PATH=emqxsl-ca.crt

# Database Configuration
DATABASE_PATH=iot_data.db

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True

# SSL Certificate paths (for HTTPS)
SSL_CERT=self_signed_cert.pem
SSL_KEY=private_key.pem

# MQTT Topics
TOPIC_SENSORS=home/sensors
TOPIC_LIGHT_CONTROL=home/control/light
TOPIC_FAN_CONTROL=home/control/fan
TOPIC_MOTOR_CONTROL=home/control/motor
TOPIC_LIGHT_STATUS=home/status/light
TOPIC_FAN_STATUS=home/status/fan
TOPIC_MOTOR_STATUS=home/status/motor
